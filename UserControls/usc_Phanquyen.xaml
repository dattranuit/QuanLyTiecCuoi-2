<UserControl x:Class="QuanLyTiecCuoi.UserControls.usc_Phanquyen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyTiecCuoi.UserControls"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             Background="{DynamicResource MaterialDesignPaper}"
             FontFamily="{DynamicResource MaterialDesignFont}"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="36*"/>
            <RowDefinition Height="136*"/>
            <RowDefinition Height="229*"/>
            <RowDefinition Height="49*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Text="PHÂN QUYỀN" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="8,0,0,0" Foreground="#FF0F5699" FontWeight="Bold" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170*"/>
                <ColumnDefinition Width="245*"/>
                <ColumnDefinition Width="193*"/>
                <ColumnDefinition Width="193*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Grid.Column="0" Grid.ColumnSpan="4" Header="Điều chỉnh phân quyền" BorderBrush="Black" Margin="2,1" FontSize="12" />
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="Mã tài khoản" Grid.Row="1" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="Black" FontWeight="Bold" Margin="20,2,0,2" />
                <TextBlock Text="Tên tài khoản" Grid.Row="2" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="Black" FontWeight="Bold" Margin="20,2,0,2" />
                <TextBlock Text="Mật khẩu" Grid.Row="3" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="Black" FontWeight="Bold" Margin="20,2,0,2" />
            </Grid>
            <Grid Grid.Column="1" >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBox    Grid.Row="1"
                            controls:TextBoxHelper.Watermark="Mã tài khoản"
                            BorderThickness="0,0,0,1" Height="32"
                            BorderBrush="Black"
                            FontSize="15" Background="{x:Null}" Margin="5,0,0,0" VerticalAlignment="Center"/>
                <TextBox    Grid.Row="2"
                            controls:TextBoxHelper.Watermark="Tên tài khoản"
                            BorderThickness="0,0,0,1" Height="32"
                            BorderBrush="Black"
                            FontSize="15" Background="{x:Null}" Margin="5,0,0,0" VerticalAlignment="Center"/>
                <TextBox    Grid.Row="3"
                            controls:TextBoxHelper.Watermark="Mật khẩu"
                            BorderThickness="0,0,0,1" Height="32"
                            BorderBrush="Black"
                            FontSize="15" Background="{x:Null}" Margin="5,0,0,0" VerticalAlignment="Center"/>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <StackPanel VerticalAlignment="Bottom">
                        <CheckBox IsChecked="False" materialDesign:CheckBoxAssist.CheckBoxSize="30" FontFamily="Segoe UI, Lucida Sans Unicode, Verdana" FontSize="16" Margin="20,0,0,0">
                            Khách hàng
                        </CheckBox>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="2">
                    <StackPanel VerticalAlignment="Bottom">
                        <CheckBox IsChecked="False" materialDesign:CheckBoxAssist.CheckBoxSize="30" FontFamily="Segoe UI, Lucida Sans Unicode, Verdana" FontSize="16" Margin="20,0,0,0">
                            Nhân viên
                        </CheckBox>
                    </StackPanel>
                </Grid>
            </Grid>
            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="1">
                    <StackPanel VerticalAlignment="Bottom">
                        <CheckBox IsChecked="False" materialDesign:CheckBoxAssist.CheckBoxSize="30" FontFamily="Segoe UI, Lucida Sans Unicode, Verdana" FontSize="16" Margin="0">
                            Quản lý
                        </CheckBox>
                    </StackPanel>
                </Grid>
                <Grid Grid.Row="2">
                    <StackPanel VerticalAlignment="Bottom">
                        <CheckBox IsChecked="False" materialDesign:CheckBoxAssist.CheckBoxSize="30" FontFamily="Segoe UI, Lucida Sans Unicode, Verdana" FontSize="16" Margin="0">
                            Admin
                        </CheckBox>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Margin="0,0,0,1.8">
            <GroupBox Grid.Column="0" Grid.ColumnSpan="4" Header="Danh sách người dùng" BorderBrush="Black" FontSize="16" Margin="2,1" >
                <DataGrid  x:Name="dtg_DanhSachPhanQuyen" ItemsSource="{Binding Data}" AutoGenerateColumns="False" IsReadOnly="False" GridLinesVisibility="All" HorizontalGridLinesBrush="Black" VerticalGridLinesBrush="Black" Background="{x:Null}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã tài khoản" FontSize="16" Binding="{Binding pq_MaTaiKhoan}">
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Tên tài khoản" FontSize="16" Binding="{Binding pq_TenTaiKhoan}">
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Mật khẩu" FontSize="16" Binding="{Binding pq_MatKhau}">
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Chức năng" FontSize="16" Binding="{Binding pq_ChucNang}">
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
        <Grid Grid.Row="3" Margin="0,3.2,0,-0.4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400*"/>
                <ColumnDefinition Width="125*"/>
                <ColumnDefinition Width="125*"/>
                <ColumnDefinition Width="125*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}"
                    ToolTip="MaterialDesignFlatMidButton" Margin="3,5,3,0" FontSize="16" Background="#FF0E2291" Foreground="#FFF1E6E6" Height="38">
                Thêm
            </Button>
            <Button Grid.Column="2"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}"
                    ToolTip="MaterialDesignFlatMidButton" Margin="3,5,3,0" FontSize="16" Background="#FF0E2291" Foreground="#FFF1E6E6" Height="38">
                Sửa
            </Button>
            <Button Grid.Column="3"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}"
                    ToolTip="MaterialDesignFlatMidButton" Margin="3,5,3,0" FontSize="16" Background="#FF0E2291" Foreground="#FFF1E6E6" Height="38">
                Xóa
            </Button>
        </Grid>
    </Grid>
</UserControl>
