<UserControl x:Class="QuanLyTiecCuoi.UserControls.usc_Dichvu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyTiecCuoi.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="662" d:DesignWidth="800">
    <Grid Margin="0" Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="230"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Rectangle Fill="#FF1E81D4" Width="auto" Margin="10,8" />
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="22*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Ellipse Width="60" Grid.Column="0" Margin="6,0,0,0">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/QuanLyTiecCuoi;component/photos/ic_ws.png" Stretch="Uniform" />
                </Ellipse.Fill>
            </Ellipse>
            <Ellipse Grid.Column="1" Margin="294,20,370,10" Width="40" >
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/QuanLyTiecCuoi;component/photos/search_sanh_icon.png"/>
                </Ellipse.Fill>
            </Ellipse>
            <TextBox x:Name="txb_TimKiemDV" Width="300" Height="40" Grid.Column="1"
             materialDesign:HintAssist.Hint="Nhập tên loại Sảnh"
             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
             VerticalAlignment="Center" Margin="351,10,53,20" FontSize="11" />

        </Grid>

        <Grid Grid.Row="1">
            <GroupBox Header="Danh sách dịch vụ" Margin="22,0,22,0">
                <DataGrid x:Name="dtg_DichVu" Width="auto"
            ItemsSource="{Binding Items2}"
            CanUserSortColumns="True"
            CanUserAddRows="False"
            SelectionUnit="Cell"
            SelectionMode="Extended" />
            </GroupBox>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="233*"></ColumnDefinition>
                <ColumnDefinition Width="300*"></ColumnDefinition>
                <ColumnDefinition Width="267*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid x:Name="grd_iconDichVu" Grid.Column="0" Margin="10,61">
                <Ellipse Stroke="#FFE8D4D4" StrokeThickness="6">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="/QuanLyTiecCuoi;component/photos/service_img.jpg"/>
                    </Ellipse.Fill>
                </Ellipse>
            </Grid>
            <Grid x:Name="grd_NhapLieuDichVu" Grid.Column="1">
                <Grid Background="#FF4DB5E6" Margin="12,12,12,12">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="txb_MaDichVu" Grid.Row="0" Margin="15"
            Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
            Height="auto"
            AcceptsReturn="True"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto"
            materialDesign:HintAssist.Hint="Mã dịch vụ" Background="#FF144C85" Focusable="True" Foreground="#FF0C0C0C" FontSize="15" />

                    <TextBox x:Name="txb_TenDichVu" Grid.Row="1" Margin="15"
            Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
            Height="auto"
            AcceptsReturn="True"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto"
            materialDesign:HintAssist.Hint="Tên dịch vụ" Background="#FF144C85" Focusable="True" Foreground="Black" FontSize="15" />
                    <TextBox x:Name="txb_DonGiaDV" Grid.Row="2" Margin="15"
            Style="{StaticResource MaterialDesignOutlinedTextFieldTextBox}"
            Height="auto"
            AcceptsReturn="True"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Auto"
            materialDesign:HintAssist.Hint="Đơn giá Dịch vụ" Background="#FF144C85" Focusable="True" Foreground="Black" FontSize="15"/>
                </Grid>
            </Grid>
            <Grid x:Name="grd_NutXuLyDichVu" Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Button x:Name="btn_Them2"
            Style="{StaticResource MaterialDesignRaisedAccentButton}"
            ToolTip="Resource name: MaterialDesignRaisedAccentButton"
            materialDesign:RippleAssist.Feedback="#DD000000" Height="auto" FontSize="20" Background="White" BorderBrush="#FF181916" Margin="12" Grid.Row="0">
                    Thêm
                </Button>
                <Button x:Name="btn_Sua2"
            Style="{StaticResource MaterialDesignRaisedAccentButton}"
            ToolTip="Resource name: MaterialDesignRaisedAccentButton"
            materialDesign:RippleAssist.Feedback="#DD000000" Height="auto" FontSize="20" Background="White" BorderBrush="#FF181916" Margin="12" Grid.Row="1">
                    Sửa
                </Button>

                <Button x:Name="btn_Xoa2" Grid.Row="2"
            Style="{StaticResource MaterialDesignRaisedAccentButton}"
            ToolTip="Resource name: MaterialDesignRaisedAccentButton"
            materialDesign:RippleAssist.Feedback="#DD000000" Height="auto" FontSize="20" Background="White" BorderBrush="#FF111110" Margin="12">
                    Xóa
                </Button>
                <Grid Grid.Row="3" Margin="0,0,0,-19" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Margin="26,0,10,24" Grid.Column="0">
                        <Button x:Name="btn_OK2"
    Style="{StaticResource MaterialDesignRaisedButton}"
    materialDesign:ButtonProgressAssist.Value="-1"
    materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
    materialDesign:ButtonProgressAssist.IsIndeterminate="True"
    Content="OK"
    Margin="-6,10,0,27" Height="Auto" />
                    </Grid>
                    <Grid Grid.Column="1" Margin="26,0,10,24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="32*"/>
                            <RowDefinition Height="35*"/>
                        </Grid.RowDefinitions>
                        <Button x:Name="btn_Cancel2"
    Style="{StaticResource MaterialDesignRaisedButton}"
    materialDesign:ButtonProgressAssist.Value="-1"
    materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
    materialDesign:ButtonProgressAssist.IsIndeterminate="True"
    Content="Hủy"
    Margin="0,10,0,27" Height="Auto" Grid.RowSpan="2" />
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
