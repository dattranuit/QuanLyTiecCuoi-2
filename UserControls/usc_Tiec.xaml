<UserControl x:Class="QuanLyTiecCuoi.UserControls.usc_Tiec"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             DataContext="{StaticResource TiecVM}"
             d:DesignHeight="662" d:DesignWidth="800">
    <Grid Background="White">
        <controls:MetroAnimatedTabControl x:Name="AnimatedTabControl">
                <controls:MetroAnimatedTabControl.Resources>
                    <Style TargetType="controls:MetroTabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="controls:MetroTabItem">
                                    <Border Name="Border">
                                        <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="20,2"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="BorderBrush" Value="#FF1585B5"/>
                                            <Setter TargetName="Border" Property="BorderThickness" Value="0,0,0,3"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter Property="Foreground" Value="#FFAEAEBD" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FontWeight" Value="DemiBold"/>
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontSize" Value="15"/>
                    </Style>
                    <Style TargetType="GroupBox">
                        <Setter Property="BorderBrush" Value="Black"/>
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="15" Foreground="#FF0E2291"/>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </controls:MetroAnimatedTabControl.Resources>
                <controls:MetroTabItem Header="Tiếp nhận đặt Tiệc">
                    <DockPanel LastChildFill="True">
                        <TextBlock Text="Đặt Tiệc Cưới" HorizontalAlignment="Center"
                                   VerticalAlignment="Top" FontSize="32" Foreground="#FF0E2291"
                                   Margin="0,5,0,0"
                                   DockPanel.Dock="Top"/>
                        <Grid DockPanel.Dock="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <GroupBox Header="Thông tin khách hàng" Grid.Column="0" Margin="10">
                                <Grid Margin="5,10,5,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.8*" ></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0" Content="Tên chú rể"/>
                                        <Label Grid.Row="1" Content="Tên cô dâu"/>
                                        <Label Grid.Row="2" Content="Ngày đặt tiệc"/>
                                        <Label Grid.Row="3" Content="Điện thoại"/>
                                        <Label Grid.Row="4" Content="Ngày đãi tiệc"/>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <TextBox Grid.Row="0" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                                        <TextBox Grid.Row="1" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                                        <DatePicker Grid.Row="2" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                                        <TextBox Grid.Row="3" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                                        <DatePicker Grid.Row="4" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                                    </Grid>
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Thông tin đặt tiệc" Grid.Column="1" Margin="10" DockPanel.Dock="Top">
                                <Grid Margin="5,10,5,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.8*" ></ColumnDefinition>
                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="0" Content="Số lượng bàn"/>
                                        <Label Grid.Row="1" Content="Số bàn dự trữ"/>
                                        <Label Grid.Row="2" Content="Ca"/>
                                        <Label Grid.Row="3" Content="Sảnh"/>
                                        <Label Grid.Row="4" Content="Tiền đặt cọc"/>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <TextBox Grid.Row="0" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                                        <TextBox Grid.Row="1" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                                        <ComboBox Grid.Row="2" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                                        <ComboBox Grid.Row="3" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                                        <TextBox Grid.Row="4" Margin="2" BorderBrush="Black" BorderThickness="1"/>
                                    </Grid>
                                </Grid>
                            </GroupBox>
                        </Grid>

                        <Grid DockPanel.Dock="Bottom">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="0.25*"/>
                            </Grid.ColumnDefinitions>
                            <GroupBox Header="Dịch vụ" Margin="10,0,0,10" Grid.Column="0">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" DataContext="{StaticResource DichVuVM}">
                                    <DataGrid ItemsSource="{Binding List}" SelectedItem="{Binding SelectedItem, Mode=OneWayToSource}" 
                                              AutoGenerateColumns="False" CanUserAddRows="False" controls:DataGridHelper.ColumnHeaderPadding="10,0">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Mã Dịch Vụ" Binding="{Binding MaDichVu}"></DataGridTextColumn>
                                            <DataGridTextColumn Header="Tên Dịch Vụ" Binding="{Binding TenDichVu}"></DataGridTextColumn>
                                            <DataGridTextColumn Header="Đơn giá" Binding="{Binding DonGia}"></DataGridTextColumn>
                                            <DataGridTextColumn Header="Mô tả" Binding="{Binding MoTa}"></DataGridTextColumn>
                                            <DataGridTextColumn Header="Ghi chú" Binding="{Binding GhiChu}"></DataGridTextColumn>
                                            <DataGridCheckBoxColumn Header="Đặt Dịch Vụ"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </ScrollViewer>
                            </GroupBox>
                            <!-- <GroupBox Header="Thông tin đặt bàn" Margin="10,0" 
                                      DockPanel.Dock="Bottom" Grid.ColumnSpan="5"
                                      Grid.Row="0">
                            </GroupBox> -->
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Button
                                    Command="{Binding PhieuDatBanCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"                      
                                    Width="140" Grid.Row="0" Margin="10"
                                    ToolTip="Mở biểu mẫu Đặt bàn" Background="Crimson" Foreground="White">
                                    Đặt Bàn
                                </Button>
                                <Button
                                    Style="{StaticResource MaterialDesignRaisedButton}"                      
                                    Width="140" Grid.Row="1" Margin="10"
                                    ToolTip="Xem Hợp Đồng" Background="#FF0F5699" Foreground="White">
                                    Xem Hợp Đồng
                                </Button>
                                <Button
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Width="140" Grid.Row="2" Margin="10" 
                                    ToolTip="In Hợp Đồng" Background="#FF0F5699" Foreground="White">
                                    In Hợp Đồng
                                </Button>
                                <Button
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Width="140" Grid.Row="3" Margin="10"
                                    ToolTip="Lưu thông tin đặt Tiệc" Background="#FF0F5699" Foreground="White">
                                    Lưu
                                </Button>
                                <Button
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Width="140" Grid.Row="4" Margin="10"
                                    ToolTip="Tạo biểu mẫu mới" Background="#FF0F5699" Foreground="White">
                                    Tạo Mới
                                </Button>
                                <Button
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Width="140" Grid.Row="5" Margin="10"
                                    ToolTip="Thoát về màn hình Home" Background="#FF0F5699" Foreground="White">
                                    Thoát
                                </Button>
                            </Grid>
                        </Grid>
                    </DockPanel>
                </controls:MetroTabItem>
                <controls:MetroTabItem Header="Quản lý thông tin Tiệc" >
                    <Grid></Grid>
                </controls:MetroTabItem>
            </controls:MetroAnimatedTabControl>
        </Grid>
</UserControl>
